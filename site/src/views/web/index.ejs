<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
<body>
    <%- include('../partials/header.ejs')  %> 
    <!--Carrusel banners de novedades-->
    <div id="carouselExampleIndicators" class="carousel slide mx-auto" data-ride="carousel" data-ride="true" class="carousel" data-interval="3000">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/img/web1800_6cuotas.jpg" class="d-block w-100" alt="Banner1">
            </div>
            <div class="carousel-item">
                <img src="/img/web_1800_papa.jpg" class="d-block w-100" alt="Banner2">
            </div>
            <div class="carousel-item">
                <img src="/img/web1800_6cuotas.jpg" class="d-block w-100" alt="Banner3">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!--Carrusel banners de novedades FIN-->
    <br>
    <br>
    <!--Menu de Categorias-->
    <h2 class="d-none d-sm-flex" id="categorias">Categorias:</h2>
    <section class="container-fluid d-sm-flex d-none flex-wrap" id="menu">
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/1"><img src="/img/copa tinto.png" class="card-img-top w-100 d-block"
                alt="Vinos Tintos">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Vinos Tintos</h5>
                </div>
            </a>
        </article>
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/2"><img src="/img/copa blanco.png" class="card-img-top w-100 d-block"
                alt="Vinos Blancos">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Vinos Blancos</h5>
                </div>
            </a>
        </article>
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/3"><img src="/img/copa rosado.png" class="card-img-top w-100 d-block"
                alt="Vinos Rosados">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Vinos Rosados</h5>
                </div>
            </a>
        </article>
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/4"><img src="/img/copa espumantes.png" class="card-img-top w-100 d-block"
                alt="Vinos Espumantes">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Espumantes</h5>
                </div>
            </a>
        </article>
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/5"><img src="/img/espirituosos.png" class="card-img-top w-100 d-block"
                alt="Espirituosos">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Espirituosos</h5>
                </div>
            </a>
        </article>
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/6"><img src="/img/whisky.png" class="card-img-top w-100 d-block"
                alt="Whiskies">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Whiskies</h5>
                </div>
            </a>
        </article>
        <article class="col-sm-6 col-md-4 col-lg card p-4 shadow-lg">
            <a href="/categoria/7"><img src="/img/cerveza.png" class="card-img-top w-100 d-block"
                alt="Cervezas">
                <div class="card-body pb-0 px-0">
                    <h5 class="card-title text-center">Cervezas</h5>
                </div>
            </a>
        </article>
    </section>
    <!--Menu de Categorias FIN-->    
    <!--Menu Tabs-->
    <ul class="nav nav-tabs container-fluid" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active tab" id="home-tab" data-toggle="tab" href="#recomendados" role="tab" aria-controls="recomendados" aria-selected="true">Recomendados</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link tab" id="profile-tab" data-toggle="tab" href="#masvendidos" role="tab" aria-controls="mas-vendidos" aria-selected="false">Más Vendidos</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link tab" id="contact-tab" data-toggle="tab" href="#mejorcalificados" role="tab" aria-controls="mejor-calificados" aria-selected="false">Mejor Calificados</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link tab" id="contact-tab" data-toggle="tab" href="#ofertas" role="tab" aria-controls="ofertas" aria-selected="false">Ofertas</a>
        </li>
    </ul>
    <div class="tab-content container-fluid" id="myTabContent">
        <section class="tab-pane fade show active row" id="recomendados" role="tabpanel" aria-labelledby="recomendados-tab">  
            <% for( let i = 0; i < recomendados.length; i++ ) { %>
                <article class="col-12 col-md-6 col-lg-3">
                    <div>
                        <img src="/images/productos/<%= recomendados[i].imageSm %>" alt="producto">
                        <h6><%= recomendados[i].name %></h6>
                        <h6><%= recomendados[i].producer.name %></h6>
                        <h4>$ <%= recomendados[i].price %></h4>
                        <h6>3 cuotas de $<%= Math.round(recomendados[i].price/3) %></h6>
                        <a href="/cart" class="btn btn-primary" id="comprar">Comprar</a>
                        <a href="/producto/detalle/<%= recomendados[i].id %>" class="btn btn-primary" id="verMas">Ver
                            Más</a>
                    </div>
                </article>
                <% }; %>
        </section>
        <section class="tab-pane fade row" id="masvendidos" role="tabpanel" aria-labelledby="mas-vendidos-tab">
            <% for( let i = 0; i <= 3; i++ ) { %>
                <article class="col-12 col-md-6 col-lg-3">
                    <div>
                        <img src="/images/productos/<%= productos[i].imageSm %>" alt="producto">
                        <h6><%= productos[i].name %></h6>
                        <h6><%= productos[i].producer.name %></h6>
                        <h4>$ <%= productos[i].price %></h4>
                        <h6>3 cuotas de $<%= Math.round(productos[i].price/3) %></h6>
                        <a href="/cart" class="btn btn-primary" id="comprar">Comprar</a>
                        <a href="/producto/detalle/<%= productos[i].id %>" class="btn btn-primary" id="verMas">Ver
                            Más</a>
                    </div>
                </article>
                <% }; %>
            
        </section>
        <section class="tab-pane fade row" id="mejorcalificados" role="tabpanel" aria-labelledby="mejor-calificados-tab">
            <% for( let i = 0; i <= 3; i++ ) { %>
                <article class="col-12 col-md-6 col-lg-3">
                    <div>
                        <img src="/images/productos/<%= productos[i].imageSm %>" alt="producto">
                        <h6><%= productos[i].name %></h6>
                        <h6><%= productos[i].producer.name %></h6>
                        <h4>$ <%= productos[i].price %></h4>
                        <h6>3 cuotas de $<%= Math.round(productos[i].price/3) %></h6>
                        <a href="/cart" class="btn btn-primary" id="comprar">Comprar</a>
                        <a href="/producto/detalle/<%= productos[i].id %>" class="btn btn-primary" id="verMas">Ver
                            Más</a>
                    </div>
                </article>
                <% }; %>
           
        </section>
        <section class="tab-pane fade row" id="ofertas" role="tabpanel" aria-labelledby="ofertas-tab">
            <% for( let i = 0; i < ofertas.length; i++ ) { %>
                <article class="col-12 col-md-6 col-lg-3">
                    <div>
                        <img src="/images/productos/<%= ofertas[i].imageSm %>" alt="producto">
                        <h6><%= ofertas[i].name %></h6>
                        <h6><%= ofertas[i].producer.name %></h6>
                        <h4>$ <%= ofertas[i].price %></h4>
                        <h6>3 cuotas de $<%= Math.round(ofertas[i].price/3) %></h6>
                        <a href="/cart" class="btn btn-primary" id="comprar">Comprar</a>
                        <a href="/producto/detalle/<%= ofertas[i].id %>" class="btn btn-primary" id="verMas">Ver
                            Más</a>
                    </div>
                </article>
                <% }; %> 
        </section>
    </div>
    <!--Menu Tabs FIN-->
    <%- include('../partials/footer.ejs')  %> 
</body>
</html>