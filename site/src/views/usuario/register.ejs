<body>
    <%- include('../partials/header.ejs')  %>

    <!--formulario de registro-->
    <section class="row mt-5">
        <article class="col-12 card pt-5">
            <div class="card-body">
                <h1 class="card-title text-center display-6" id="title">Bienvenido a WineHouse</h1>
            </div>
        </article>
    </section>
    <section class="bg-home pt-4">
        <div class="container">
            <div>
                <ul id="erroresRegistro">
    
                </ul>
            </div>
            <div class="row">
                <div class="col-8 mx-auto bg-light ">
                    <div class="signup-form">
                        <form action="/register" id="registroForm" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <input type="text" class="form-control" name="name" placeholder="Nombre" value="<%= typeof old != 'undefined' ? old.name : '' %>"
                                    required>
                                    <% if(typeof(errors) != 'undefined' && errors.name){%>
                                        <span class="text-danger font-weight-bold">
                                          <%= errors.name.msg %>
                                        </span>
                                     <%}%>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="lastName" placeholder="Apellido" value="<%= typeof old != 'undefined' ? old.lastName : '' %>"
                                    required>
                                    <% if(typeof(errors) != 'undefined' && errors.lastName){%>
                                        <span class="text-danger font-weight-bold">
                                          <%= errors.lastName.msg %>
                                        </span>
                                     <%}%>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="alias" placeholder="Alias" value="<%= typeof old != 'undefined' ? old.alias : '' %>"
                                    required>
                                    <% if(typeof(errors) != 'undefined' && errors.alias){%>
                                        <span class="text-danger font-weight-bold">
                                          <%= errors.alias.msg %>
                                        </span>
                                     <%}%>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="email" placeholder="Email" value="<%= typeof old != 'undefined' ? old.email : '' %>"
                                    required>
                                    <% if(typeof(errors) != 'undefined' && errors.email){%>
                                        <span class="text-danger font-weight-bold">
                                          <%= errors.email.msg %>
                                        </span>
                                     <%}%>
                            </div>
                            <div class="form-group input-group mb-3">
                                <input type="password" class="form-control" id="frontPassword" name="password" placeholder="Contraseña">
                            </div>
                                    <% if(typeof(errors) != 'undefined' && errors.password){%>
                                        <span class="text-danger font-weight-bold">
                                          <%= errors.password.msg %>
                                        </span>
                                     <%}%>
                            
                            <div class="form-group">
                                <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Confirme su contraseña"
                                    required>
                                    <% if(typeof(errors) != 'undefined' && errors.confirm_password){%>
                                        <span class="text-danger font-weight-bold">
                                          <%= errors.confirm_password.msg %>
                                        </span>
                                     <%}%>
                            </div>
                            <div class="custom-file">
                                <label class="font-weight-bold" for="avatar">Seleccione su Avatar</label>
                                <input type="file" class="form-control-file" name="avatar">
                                <% if(typeof(errors) != 'undefined' && errors.avatar){%>
                                    <span class="text-danger font-weight-bold">
                                      <%= errors.avatar.msg %>
                                    </span>
                                 <%}%>
                            </div>
                            <div class="form-group">
                                <label class="checkbox-inline"><input type="checkbox" required> Acepto los <a
                                        href="#" data-toggle="modal" data-target="#terminos-condiciones" class="terminos">Términos y
                                        Condiciones</a> y las <a href="#" data-toggle="modal"
                                        data-target="#politicas-privacidad" class="terminos">Políticas de Privacidad</a> de
                                    WineHouse.</label>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-info">Registrarse</button>
                            </div>
                        </form>
                        <div class="text-center my-3">Ya tenes una cuenta? <a href="/login" class="terminos">Inicia sesión</a></div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
