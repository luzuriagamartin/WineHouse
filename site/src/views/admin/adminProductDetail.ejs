                                                                        <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                                
                                                <!--Precio-->
                                                
                                                <tr>
                                                    <th scope="row">PRECIO</th>
                                                    <td>$ <%= producto.price %></td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#precioModal">
                                                    </td>
                                                    <div class="modal fade" id="precioModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Editar Producto</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div>
                                                                        <ul id="errores-price"></ul>
                                                                    </div>
                                                                    <form id="form-price" method="POST" action="/admin/productos/detalle/<%= producto.id %>/editar/price?_method=PUT">
