<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/detalle_producto.css">
    <link rel="stylesheet" href="/css/detalle_producto_admin.css">
    <link rel="stylesheet" href="/css/stars.css">
</head>
<body>
    <%- include('../partials/header.ejs') %>
    
    <!--Detalle de Producto-->
    
    <main class="container-fluid" id="principal">
        <div class="row">
            <div class="col-12 col-md-4 info">
                <div class="btn-volver"><a href="/admin/productos"><button type="button" class="btn btn-primary" id="volver" data-dismiss="modal">VOLVER</button></a></div>
                <figure>
                    <img src="/images/productos/<%= producto.imageLg %>" alt="Vino">
                </figure>
                <form id="comprar" action="/admin/productos/detalle/<%= producto.id %>/editar/stock?_method=PUT" method="POST">
                    <label for="stock">Stock:</label>
                    <input id="stock" type="number" name="stock" value="<%= producto.stock %>">
                    <br>
                    <button type="submit" class="btn btn-primary" id="comprar">ACTUALIZAR STOCK</button>
                </form>
                <div class="borrar">
                    <button type="button" class="btn btn-primary" id="borrar" data-toggle="modal" data-target="#borrarModal"><ion-icon name="trash-outline"></ion-icon>  BORRAR PRODUCTO</button>
                    <div class="modal fade" id="borrarModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Borrar Producto</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">  
                                    <p>¿Está seguro que desea borrar el producto <%= producto.name %>?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">No</button>
                                    <form method="POST" action="/admin/productos/detalle/<%= producto.id %>/borrar?_method=DELETE">
                                        <button type="submit" class="btn btn-primary" id="comprar">Si</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 info">
                <h1><%= producto.name %></h1>
                <h4><%= producto.varietal.name %></h4>
                <% if(typeof(errors) != 'undefined'){ errors.forEach(error => { %>
                    <span class="text-danger font-weight-bold"><%= error.msg %></span>
                    <br>
                <%})}%> 
                    <div class="accordion" id="accordionExample">
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        INFORMACIÓN >>
                                    </button>
                                </h2>
                            </div>
                            
                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                                <div class="card-body">
                                    <table class="table table-sm table-borderless">
                                        <thead>
                                            <tr>
                                                <th scope="col"></th>
                                                <th scope="col"></th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <!--SKU-->  
                                            <tr>
                                                <th scope="row">SKU</th>
                                                <td><%= producto.sku %></td>
                                                <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#skuModal">
                                                </td>
                                                <div class="modal fade" id="skuModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Editar Producto</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
