                                                                <div>
                                                                    <ul id="errores-sku"></ul>
                                                                </div>
                                                                <form id="form-sku" method="POST" action="/admin/productos/detalle/<%= producto.id %>/editar/sku?_method=PUT">
                                                                    <div class="form-group">
                                                                        <label for="sku">SKU</label>
                                                                        <input type="text" class="form-control" name="sku" value="<%= producto.sku %>">
                                                                    </div>
                                                                    <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                    <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </tr>
                                            
                                            <!--Nombre-->
                                            
                                            <tr>
                                                <th scope="row">NOMBRE</th>
                                                <td><%= producto.name %></td>
                                                <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#nombreModal">
                                                </td>
                                                <div class="modal fade" id="nombreModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Editar Producto</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
