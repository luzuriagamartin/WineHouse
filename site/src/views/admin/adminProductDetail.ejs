                                                                        <select class="form-control" name="categoryId" id="" required>
                                                                            <% categorias.forEach(cat=>{ %> 
                                                                                <option value=<%=cat.id%> <%= cat.id == producto.category.id ? "selected" : null %>><%=cat.name%></option>
                                                                                <%})%> 
                                                                            </select>
                                                                        </div>
