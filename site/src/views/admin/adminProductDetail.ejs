                                                                </div>
                                                                <div class="modal-body">
                                                                    <div>
                                                                        <ul id="errores-volume"></ul>
                                                                    </div>
                                                                    <form id="form-volume" method="POST" action="/admin/productos/detalle/<%= producto.id %>/editar/volume?_method=PUT">
                                                                        <div class="form-group">
                                                                            <label for="volume">VOLUMEN</label>
                                                                            <div class="input-group-append">
                                                                                <input type="number" class="form-control" name="volume" value="<%= producto.volume %>" required>
                                                                                <span class="input-group-text">ml</span>
                                                                            </div>
                                                                        </div>
                                                                        <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                        <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                                
                                                <!--Descripción-->
                                                
                                                <tr>
                                                    <th scope="row">DESCRIPCIÓN</th>
                                                    <td><%= producto.description %></td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#descripcionModal">
                                                    </td>
                                                    <div class="modal fade" id="descripcionModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Editar Producto</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div>
                                                                        <ul id="errores-description"></ul>
                                                                    </div>
                                                                    <form id="form-description" method="POST" action="/admin/productos/detalle/<%= producto.id %>/editar/description?_method=PUT">
                                                                        <div class="form-group">
                                                                            <label for="description">DESCRIPCIÓN</label>
                                                                            <textarea name="description" rows="3" class="form-control"><%=producto.description%> </textarea>
                                                                        </div>
                                                                        <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                        <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                                
                                                <!--Productor-->
                                                <tr>
                                                    <th scope="row">PRODUCTOR</th>
                                                    <td><%= producto.producer.name %></td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#productorModal">
                                                    </td>
                                                    <div class="modal fade" id="productorModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Editar Producto</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <form method="POST" action="/admin/productos/detalle/<%= producto.id %>/editar/producerId?_method=PUT">
                                                                        <div class="form-group">
