                                                                        <label for="name">NOMBRE</label>
                                                                        <input type="text" class="form-control" name="name" value="<%= producto.name %>">
                                                                    </div>
                                                                    <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                    <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </tr>
                                            
                                            <!--Categoría-->
                                            <tr>
                                                <th scope="row">CATEGORÍA</th>
                                                <td><%= producto.category.name %></td>
                                                <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#categoriaModal">
                                                </td>
                                                <div class="modal fade" id="categoriaModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Editar Producto</h5>
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
