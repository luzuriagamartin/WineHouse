                                                                            <select class="form-control" name="producerId" id="" required>
                                                                                <% productores.forEach(p=>{ %> 
                                                                                    <option value=<%=p.id%> <%= p.id == producto.producer.id ? "selected" : null %>><%=p.name%></option>
                                                                                <%})%> 
                                                                            </select>
                                                                        </div>
                                                                        <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                        <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                                <!--Procedencia-->    
                                                <tr>
                                                    <th scope="row">PROCEDENCIA</th>
                                                    <td><%= producto.region %></td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#procedenciaModal">
                                                    </td>
                                                    <div class="modal fade" id="procedenciaModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Editar Producto</h5>
                                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <form method="POST" action="/admin/productos/detalle/<%= producto.id %>/editar/region?_method=PUT">
                                                                        <div class="form-group">
                                                                            <label for="region">PROCEDENCIA</label>
                                                                            <input type="text" class="form-control" name="region" value="<%= producto.region %> ">
                                                                        </div>
                                                                        <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                        <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                                <!--Varietal-->
                                                <tr>
                                                    <th scope="row">VARIETAL</th>
                                                    <td><%= producto.varietal.name %></td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#varietalModal">
                                                    </td>
                                                    <div class="modal fade" id="varietalModal" tabindex="-1" role="dialog" aria-hidden="true">
