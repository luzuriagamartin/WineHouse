                                                    <th scope="row">ALCOHOL</th>
                                                    <td><%= producto.alcohol %> %</td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#alcoholModal">
                                                    </td>
                                                    <div class="modal fade" id="alcoholModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog">
