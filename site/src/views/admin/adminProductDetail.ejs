                                                                            <label for="price">PRECIO UNITARIO</label>
                                                                            <div class="input-group-prepend">
                                                                                <span class="input-group-text">$</span>
                                                                                <input type="number" class="form-control" name="price" value="<%= producto.price %>" required>
                                                                            </div>
                                                                        </div>
                                                                        <button type="button" class="btn btn-primary" id="verMas" data-dismiss="modal">CERRAR</button>
                                                                        <button type="submit" class="btn btn-primary" id="comprar">GUARDAR CAMBIOS</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </tr>
                                                
                                                <!--Volumen-->
                                                
                                                <tr>
                                                    <th scope="row">VOLUMEN</th>
                                                    <td><%= producto.volume %> ml</td>
                                                    <td><ion-icon style="color:#8a0804" name="pencil-outline" data-toggle="modal" data-target="#volumenModal">
                                                    </td>
                                                    <div class="modal fade" id="volumenModal" tabindex="-1" role="dialog" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Editar Producto</h5>
