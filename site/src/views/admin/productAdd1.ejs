<!DOCTYPE html>
<html lang="en">
    <head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/agregarProducto.css">
    </head>
<body>
    
    <%- include('../partials/header.ejs') %>
    <!--header y navBar FIN-->
    
    <!--Formulario Carga Producto Parte 1-->
    
    <main class="container">
        <h2 class="titulo">Nuevo Producto<span class="badge badge-primary">Paso 1 de 3</span> </h2>
        <div>
            <ul id="erroresProductos">
                
            </ul>
        </div>
        <form class="formulario" id="formulario" method="POST" action="/admin/productos/agregar1" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label for="sku">SKU</label>
                    <% if(typeof(errors) != 'undefined' && errors.sku){%>
                        <span class="text-danger font-weight-bold">
                          <%= errors.sku.msg %>
                        </span>
                     <%}%>
                    <input type="text" class="form-control" name="sku" value='<%= typeof old != 'undefined' ? old.sku : '' %>' required>
                </div>
                <div class="form-group col-md-4">
                    <label for="categoria_id">CATEGORIA</label>
                    <select class="form-control categorias" name="categoria_id" id="" required>
                        <% categorias.forEach(cat=>{ %> 
                        <option value=<%=cat.id%> <%= typeof old != 'undefined' && old.categoria_id == cat.id ? 'selected' : null %>><%=cat.name%></option>
                   <%})%>    
                    </select>
                </div>
            </div>
            <div class="form-row productos" >
                <div class="form-group col-md-8">
                    <label for="nombre">PRODUCTO / MARCA / NOMBRE</label>
                    <% if(typeof(errors) != 'undefined' && errors.nombre){%>
                        <span class="text-danger font-weight-bold">
                          <%= errors.nombre.msg %>
                        </span>
                     <%}%>
                    <input type="text" class="form-control productos" name="nombre" value='<%= typeof old != 'undefined' ? old.nombre : '' %>' required>
                </div>
                <div class="form-group col-md-4">
                    <label for="precio">PRECIO UNITARIO</label>
                    <% if(typeof(errors) != 'undefined' && errors.precio){%>
                        <span class="text-danger font-weight-bold">
                          <%= errors.precio.msg %>
                        </span>
                     <%}%>
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control precio" name="precio" value='<%= typeof old != 'undefined' ? old.precio : '' %>' required>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="img_sm" class="imgsm" onchange="imagenchica">IMAGEN CHICA</label>
                    <% if(typeof(errors) != 'undefined' && errors.img_sm){%>
                        <span class="text-danger font-weight-bold">
                          <%= errors.img_sm.msg %>
                        </span>
                     <%}%>
                    <input type="file" class="form-control-file" name="img_sm">
                </div>
                <div class="form-group col-md-4">
                    <label for="img_lg" class="imglg" onchange="imagengrande">IMAGEN GRANDE</label>
                    <% if(typeof(errors) != 'undefined' && errors.img_lg){%>
                        <span class="text-danger font-weight-bold">
                          <%= errors.img_lg.msg %>
                        </span>
                     <%}%>
                    <input type="file" class="form-control-file" name="img_lg">
                </div>
                <div class="form-group col-md-4">
                    <label for="volumen">VOLUMEN</label>
                    <% if(typeof(errors) != 'undefined' && errors.volumen){%>
                        <span class="text-danger font-weight-bold">
                          <%= errors.volumen.msg %>
                        </span>
                     <%}%>
                    <div class="input-group-append">
                        <input type="number" class="form-control volumen" name="volumen" value='<%= typeof old != 'undefined' ? old.volumen : '' %>' required>
                        <span class="input-group-text">ml</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="descripcion">DESCRIPCIÃ“N</label>
                <% if(typeof(errors) != 'undefined' && errors.descripcion){%>
                    <span class="text-danger font-weight-bold">
                      <%= errors.descripcion.msg %>
                    </span>
                 <%}%>
                <textarea name="descripcion" rows="3" class="form-control descripcion"><%= typeof old != 'undefined' ? old.descripcion : '' %></textarea>
            </div>
            <div class="btn-siguiente">
                <button type="submit" class="btn btn-primary" id="siguiente">SIGUIENTE >></button>
            </div>            
        </form>
    </main>
    
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous">
    </script>
    <script src="https://unpkg.com/ionicons@5.1.0/dist/ionicons.js"></script>
    <script src="/js/master.js"></script>
    <script src="/js/productRegister.js"></script>
</body>
</html>